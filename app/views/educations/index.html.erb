<div class="application">
  <h1>SECTION B: EDUCATION</h1>
  <p>Please see your education below.</p>
  <p><a href="/applications/<%= @application.id %>/educations/new">Add new education</a></p>
  <hr>
  <% @educations.each do |education| %>
    <p>School: <%= education.school %></p>
    <p>Location: <%= education.location %></p>
    <p>Start Date: <%= pretty_date(education.start_date) %></p>
    <p>End Date: <%= pretty_date(education.end_date) %></p>
    <p>Degree: <%= education.degree %></p>
    <p>Degree date: <%= pretty_date(education.degree_date) %></p>
    <p><%= link_to 'Edit education', "/applications/#{@application.id}/educations/#{education.id}/edit"%>
    <hr>
  <% end %>

  <%= render partial: '/shared/other_application_section' %>
</div>
