<div class="application">
  <h1>LOCAL SCHOOLS</h1>

  <div class="row">
    <div class="col-md-10">
      <%= bootstrap_form_for(@school, :url => {:action => "update"}) do |f| %>
        <p><%= f.text_field :contact_name %></p>
        <p><%= f.text_field :school_address %></p>
        <p><%= f.text_area :bio %></p>
        <p><%= f.submit :save %></p>
      <% end %>
    </div>
  </div>

   <p><%= link_to 'Cancel', "/local_schools/#{@school.id}"%>
</div>
