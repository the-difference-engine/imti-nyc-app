<!-- Breadcumb area start -->
    <section class="breadcumb_area">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="breadcumb_section">
                        <!-- Breadcumb page title start -->
                        <div class="page_title">
                            <h3>Donate</h3>
                        </div>
                        <!-- Breadcumb page pagination start -->
                        <div class="page_pagination">
                            <ul>
                                <li><%= link_to "Home", "/" %></li>
                                <li><i class="fa fa-angle-right" aria-hidden="true"></i></li>
                                <li>Donate</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcumb area end -->

    <p>First Name: <%= @donation.first_name %></p>
    <p>Last Name: <%= @donation.last_name %></p>
    <p>Email: <%= @donation.email %></p>
    <p>Amount: <%= @donation.amount %></p>
    <!-- ==================== Message Now Area Start ==================== -->
    <section class="message_now_area">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <%= form_tag "/donations", method: :post do %>
                    <input type="hidden" name="first_name" value="<%= @donation.first_name %>">
                    <input type="hidden" name="last_name" value="<%= @donation.last_name %>">
                    <input type="hidden" name="email" value="<%= @donation.email %>">
                    <input type="hidden" name="amount" value="<%= @donation.amount %>">
                    <% end %>
                </div>
            </div>
            <!-- .end row -->
        </div>
        <!-- .end container -->
    </section>
    <!-- ==================== Message Now Area Start ==================== -->

    <!-- ==================== Map and Contact Area Start ==================== -->
    <div class="map_contact_address_area">
        <!-- Map Area Start -->
        <div class="map_area" id="googleMap"></div>
    </div>
    <!-- ==================== Map and Contact Area End ==================== -->