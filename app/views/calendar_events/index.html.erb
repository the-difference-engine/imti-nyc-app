<!-- Breadcumb area start -->
<section class="breadcumb_area">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="breadcumb_section">
                    <!-- Breadcumb page title start -->
                    <div class="page_title">
                        <h3><%= @title %></h3>
                    </div>
                    <!-- Breadcumb page pagination start -->
                    <div class="page_pagination">
                        <ul>
                            <li><%= link_to "Home", "/" %></li>
                            <li><i class="fa fa-angle-right" aria-hidden="true"></i></li>
                            <li><%= @title %></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>    
</section>
<div>
    <% if current_user && current_user.admin? %>
        <%= link_to "Create New Event", new_calendar_event_path %>
    <% end %>
</div>
<section>
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div>
                    <%= month_calendar events: @events  do |date, events| %>
                        <h3 style="text-align: left;"><%= date.day %></h3>
                        <div>
                            <% events.each do |event| %>
                                <p style="text-align: left"><%= link_to(event.title, calendar_event_path(event.id)) %></p>
                                <p style="text-align: left"><%= event.pretty_time(event.start_time) %></p>
                                <% if event.location %>    
                                    <p style="text-align: left">Location: <%= event.location %></p>
                                <% end %>
                                <% if event.details.present? %>    
                                    <p style="text-align: left">Details: <%= event.details %></p>
                                <% end %>
                                <hr>
                            <% end %>
                        </div>
                    <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
