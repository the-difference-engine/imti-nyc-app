<div class="application-table">
  <table>
    <tr>
      <th>First Name</th>
      <th>Middle Initial</th>
      <th>Last Name</th>
      <th>Delete Member</th>
      <!-- <th>First Name</th> -->
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name.capitalize %></td>
        <% if user.middle_initial %>
          <td><%= user.middle_initial.capitalize %></td>
        <% else %>
          <td></td>
        <% end %>
        <td><%= user.last_name.capitalize %></td>
        <td><i class="fa fa-trash" data-toggle="modal" data-target="#<%= user.id %>Modal"></i></td>
      </tr>
      <div id="<%= user.id %>Modal" class="modal fade" role="dialog">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
              <h4 class="modal-title">Remove <%= user.first_name %></h4>
            </div>
            <div class="modal-body">
              <p>Are you sure you want to remove this member?</p>
            </div>
            <div class="modal-footer">
              <%= button_to "Remove", "/users/#{user.id}", method: :delete, class: "btn btn-danger" %>
              <!-- <button class="btn btn-danger">Remove</button> -->
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </table>
</div>