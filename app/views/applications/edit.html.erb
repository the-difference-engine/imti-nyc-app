<div class="application">
  <p>SECTION A: PERSONAL DATA </p>

  <%= bootstrap_form_for @user, :url => {:action => "update"} do |f| %>
    <p><%= f.text_field :last_name %></p>
    <p><%= f.text_field :first_name %></p>
    <p><%= f.text_field :middle_initial %></p>
    <p><%= f.text_field :email, disabled: true %></p>
    <p><%= f.text_field :phone_number %></p>
    <p><%= f.text_field :street %></p>
    <p><%= f.text_field :city %></p>
   <% if @user.role == "domestic_applicant" %>
        <%= f.text_field :state %>
    <% end %>
    <p><%= f.text_field :zip_code %></p>
    <p><%= f.text_field :country %></p>
    <p><%= f.text_field :birth_place %></p>
    <p><%= f.date_field :birth_date %></p>
    <p><%= f.text_field :country_of_citizenship %></p>
    <p><%= f.text_field :occupation %></p>
    <p><%= f.text_field :name_of_spouse %></p>
    <p><%= f.text_field :ages_of_children %></p>
    <p><%= f.submit :save %></p>
    <p><%= link_to 'Cancel', "/applications/#{@application.id}/"%></p>
  <% end %>

</div>





