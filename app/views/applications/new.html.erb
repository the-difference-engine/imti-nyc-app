<div class="application">
  <p>SECTION A: PERSONAL DATA </p>

  <%= bootstrap_form_for(@user, url: applications_path, method: :post) do |f| %>
    <%= f.text_field :phone_number %>
    <%= f.text_field :street %>
    <%= f.text_field :city %>
    <% if @user.role == "domestic_applicant" %>
        <%= f.text_field :state %>
    <% end %>
    <%= f.text_field :zip_code %>
    <%= f.text_field :country %>
    <%= f.text_field :birth_place %>
    <%= f.date_field :birth_date %>
    <%= f.text_field :country_of_citizenship %>
    <%= f.text_field :occupation %>
    <%= f.text_field :name_of_spouse %>
    <%= f.text_field :ages_of_children %>
    <%= f.submit :Save %>
  <% end %>
</div>

