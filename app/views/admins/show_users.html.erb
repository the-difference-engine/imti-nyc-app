<style>
.users-table table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
  margin-bottom: 50px;
  margin-top: 50px;
}

.users-table td, th {
  border: 1px solid #dddddd ;
  text-align: center;
  padding: 8px;
}

.users-table tr:nth-child(even) {
  background-color: #dddddd ;
}
</style>

<h3>Admin Users</h3>
<div class="users-table">
  <table>
    <tr>
      <th>Email</th>
      <th>Full Name</th>
      <th>Role</th>
      <th>View Profile</th>
      <th>Move to Admin</th>
    </tr>
    <% @users_admin.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.first_name + ' ' + user.last_name %></td>
        <td><%= user.role %></td>
        <td><%= link_to "view profile", "#" %></td>
        <td><%= link_to "move to local school admin", { controller: "admins", action: "move_to_local_school_admin", user_id: user.id} %></td>
      </tr>
      <% end %>
  </table>
</div>

