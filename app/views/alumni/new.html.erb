<div class="application">
<h1>Alumni Info</h1>
  <%= bootstrap_form_for(@user, url: alumni_path(@user.id), method: :patch) do |f| %>
    <%= f.text_field :phone_number %>
    <%= f.text_field :street %>
    <%= f.text_field :city %>
    <%= f.text_field :state %>
    <%= f.text_field :zip_code %>
    <%= f.text_field :country %>
    <%= f.text_field :birth_place %>
    <%= f.date_field :birth_date %>
    <%= f.text_field :country_of_citizenship %>
    <%= f.text_field :occupation %>
    <%= f.text_field :name_of_spouse %>
    <%= f.text_field :ages_of_children %>
    <%= f.submit :save %>
  <% end %>
</div>
