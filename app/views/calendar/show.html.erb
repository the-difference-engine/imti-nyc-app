    <!-- Breadcumb area start -->
    <section class="breadcumb_area">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="breadcumb_section">
                        <!-- Breadcumb page title start -->
                        <div class="page_title">
                            <h3><%= @title %></h3>
                        </div>
                        <!-- Breadcumb page pagination start -->
                        <div class="page_pagination">
                            <ul>
                                <li><%= link_to "Home", "/" %></li>
                                <li><i class="fa fa-angle-right" aria-hidden="true"></i></li>
                                <li><%= @title %></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcumb area end -->
    <!-- <section class="calendar_area section_padding_100"> -->
    <section>
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div>
                        <%= month_calendar events: @events  do |date, events| %>
                            <h3 style="text-align: left;"><%= date.day %></h3>
                            
                            <div>
                                <% events.each do |event| %>
                                    <p style="text-align: left;"><%= event.title %></p>
                                    <p style="text-align: left;">
                                        <!-- strp_format = "%A, %d %b %Y %l:%M %p" -->
                                        <%= event.pretty_date(event.start_time) %> 
                                        <%= event.pretty_date(event.end_time) %>
                                    </p>
                                    
                                        
                                    
                                    <p style="text-align: left;"><%= event.details %></p>
                                    <hr>
                                    <% if event.start_time == date.day %>
                                        <div>
                                            <%= event.title %>
                                            <%= event.pretty_date %>
                                            <%# event.start_date.year %>
                                        </div>
                                    <% end %>
                                <% end %>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    <section>
    <!-- </section> -->
