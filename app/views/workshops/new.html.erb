<%= form_tag '/workshops', method: :post do %>
  <div>
  <%= label_tag :name %>
  <%= text_field_tag :name, @workshop.name %>
</div>
<div>
  <%= label_tag :description %>
  <%= text_field_tag :description, @workshop.description %>
</div>
<div>
 <%= label_tag :date %>
 <%= text_field_tag :date  %>
</div>
<div>
  <%= label_tag :price %>
  <%= text_field_tag :price, @workshop.price %>
</div>
<%= submit_tag 'Create New workshop' %>
<% end %>