<div class="modal-body row">
  <div class="container col-md-6">
    <p>Title: <%= @workshop.name%></p>
    <p>Description: <%= @workshop.description%></p>
    <p>Date: <%= pretty_date(@workshop.time)%></p>
    <p>Price: <%= number_to_currency(@workshop.price) %></p>
    <br>
    <% if current_user && current_user.admin? %>
      <%= link_to('Edit Workshop', "/workshops/#{@workshop.id}/edit") %>
      <%= form_tag "/workshops/#{@workshop.id}", method: :delete do %>
      <%= submit_tag 'Remove this workshop' %>
      <% end %>

    <% end %>
    <br>
    <h1>To register for this class please fill out this form.</h1>
    <div>
      <%= form_tag '/registrants', method: :post do %>
        <div>
          <%= label_tag :first_name %>
          <%= text_field_tag :first_name, @registrant.first_name, value: @user.first_name %>
        </div>
        <div>
          <%= label_tag :last_name %>
          <%= text_field_tag :last_name, @registrant.last_name, value: @user.last_name %>
        </div>
        <div>
          <%= label_tag :affiliation %>
          <% if @user.local_school %>
            <%= text_field_tag :affiliation, @registrant.affiliation, value: @user.local_school.name %>
          <% else %>
            <%= text_field_tag :affiliation, @registrant.affiliation %>
          <% end %>
        </div>
        <div>
          <%= label_tag :occupation %>
          <%= text_field_tag :occupation, @registrant.occupation, value: @user.occupation %>
        </div>
        <div>
          <%= label_tag :email %>
          <%= text_field_tag :email, @registrant.email, value: @user.email %>
        </div>
        <div>
          <%= label_tag :phone %>
          <%= text_field_tag :phone, @registrant.phone, value: @user.phone_number%>
        </div>
          <%= hidden_field_tag :workshop_id, @workshop.id%>
          <%= submit_tag 'Register' %>
      <% end %>
    </div>
    <br>
    <% if current_user && current_user.local_school_admin? %>
      <h1>Bulk Import</h1>
      <p><b>Use this function to register multiple users by importing a spreadsheet</b></p>
      <%= form_tag "/registrants/import", method: :post, multipart: true do %>
          <%= file_field_tag :file %>
          <%= hidden_field_tag :workshop_id, @workshop.id%>
          <%= hidden_field_tag :local_school_id, current_user.local_school_id %>
          <%= submit_tag "Import" %>
      <% end %>
    <% end %>
  </div>
  <% if @user.role == "local_school_admin" %>
    <div class="container col-md-6">
      <h3><%= @user.first_name %>, the following people are registered for <%= @workshop.name %>!</h3>
      <h4>To complete your registration, please submit your payment below for any unpaid registrants</h4>
        <table class="table-condensed">
          <thead>
            <tr>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Email</th>
              <th>Affiliation</th>
              <th>Occupation</th>
              <th>Phone Number</th>
              <th>Payment Status</th>              
            </tr>
          </thead>
          <tbody>
            <% @registrants.each do |registrant| %>
              <tr>
                <td><%= registrant.first_name %></td>
                <td><%= registrant.last_name %></td>
                <td><%= registrant.email %></td>
                <td><%= registrant.affiliation %></td>
                <td><%= registrant.occupation %></td>
                <td><%= registrant.phone %></td>
                <td>
                  <% if registrant.paid == false %>
                    Not Paid
                  <% else %>
                    Paid
                  <% end %>                
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <button><a href="./<%= @workshop.id %>/payment"> Pay for unpaid registrants</button>
    </div>
  <% end %>
</div>





